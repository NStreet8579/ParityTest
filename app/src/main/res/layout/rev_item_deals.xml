<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/rev_item_img_thumb"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/txt_rev_deals_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="HELLO WASD ASDSD"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rev_item_img_thumb"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/txt_rev_deals_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="18sp"
        android:drawablePadding="5dp"
        android:drawableEnd="@drawable/ic_like"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/rev_item_img_thumb"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt_rev_deals_comment"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/txt_rev_deals_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="18sp"
        android:drawablePadding="5dp"
        android:drawableEnd="@drawable/ic_comment"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/rev_item_img_thumb"
        app:layout_constraintLeft_toRightOf="@id/txt_rev_deals_like"
        app:layout_constraintRight_toLeftOf="@id/txt_rev_deals_time"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/txt_rev_deals_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="18sp"
        android:drawablePadding="5dp"
        android:drawableEnd="@drawable/ic_time"
        app:layout_constraintTop_toBottomOf="@id/rev_item_img_thumb"
        app:layout_constraintLeft_toRightOf="@id/txt_rev_deals_comment"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/txt_rev_deals_all_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All other"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/rev_item_img_thumb"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>