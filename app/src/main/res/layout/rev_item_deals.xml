<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardUseCompatPadding="true"
        app:elevation="6dp"
        android:background="#FFF"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/rev_item_img_thumb"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/txt_rev_deals_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="HELLO WASD ASDSD"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/rev_item_img_thumb"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"/>


            <TextView
                android:id="@+id/txt_rev_deals_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="18sp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_like"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintTop_toBottomOf="@id/rev_item_img_thumb"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/txt_rev_deals_comment"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>


            <TextView
                android:id="@+id/txt_rev_deals_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="18sp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_comment"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintTop_toBottomOf="@id/rev_item_img_thumb"
                app:layout_constraintLeft_toRightOf="@id/txt_rev_deals_like"
                app:layout_constraintRight_toLeftOf="@id/txt_rev_deals_time"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>


            <TextView
                android:id="@+id/txt_rev_deals_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="18sp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_time"
                app:layout_constraintTop_toBottomOf="@id/rev_item_img_thumb"
                app:layout_constraintLeft_toRightOf="@id/txt_rev_deals_comment"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>


            <TextView
                android:id="@+id/txt_rev_deals_all_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All other"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@id/rev_item_img_thumb"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>